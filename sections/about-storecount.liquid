{{ 'storecount.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top2 }}px;
    padding-bottom: {{ section.settings.padding_bottom2 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<div class="section-{{ section.id }}-padding">


  <div class="blog-page-width">
    {% if section.settings.enter_text1 != blank %}
      {% render 'text-with-logo'
        , text: section.settings.enter_text1
        , css_class: 'h2 custom-heading store-count-heading' %}
    {% endif %}
    <div class="caption counter-section-text">{{ section.settings.enter_text }}</div>
    <div class="grid grid--1-col grid--3-col-desktop grid--2-col-tablet ">
      {% for block in section.blocks %}
        <div class="grid__item counter-main">
          <div class="count-image-container">
            {% render 'image-snippet'
              , mobileSrc: block.settings.add_image
              , desktopSrc: block.settings.add_image %}
          </div>
          <div class="counter-data">
            <div class="counter-content">{{ block.settings.text1 }}</div>
            <div class="counter-text">{{ block.settings.text2 }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "StoreCount",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "label": "enter Heading",
        "id": "enter_text1"
      },
      {
        "type": "text",
        "label": "enter text",
        "id": "enter_text"
      },

      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_top2",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Top Padding Mobile",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom2",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Bottom Padding Mobile",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image-text",
        "name": "image-text",
        "settings": [
          {
            "type": "image_picker",
            "label": "Add Image",
            "id": "add_image"
          }, {
            "type": "text",
            "label": "Enter Text",
            "id": "text1"
          }, {
            "type": "text",
            "label": "Enter Text",
            "id": "text2"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "store count"
      }
    ]
  }
{% endschema %}