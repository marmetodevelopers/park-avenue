{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding">
  <div class="image_banner_carousel_main">
    {% if section.settings.heading != blank %}
      {% render "text-with-logo"
        , text: section.settings.heading
        , css_class: "h2 page-width mb-3" %}
    {% endif %}
    <div
      class="splide"
      id="{{section.id}}"
      aria-label="Splide Basic HTML Example">
      <div class="splide__arrows">
        <button class="splide__arrow splide__arrow--prev">
          {% render 'splide-left-arrow' %}
        </button>
        <button class="splide__arrow splide__arrow--next">
          {% render 'splide-right-arrow' %}
        </button>
      </div>
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <a href="{{block.settings.image_link}}">
                <div class="ibc_image_container">
                  {% render 'picture'
                    , class: ''
                    , mobileSrc: block.settings.image_small
                    , desktopSrc: block.settings.image_desktop %}
                </div>
                {% if block.settings.title != blank or block.settings.subtitle != blank %}
                  <div class="banner_text">
                    {% if block.settings.title != blank %}
                      <div class="banner_title flex custom_center {{ block.settings.title_size }}">
                        {{ block.settings.title }}
                      </div>
                    {% endif %}
                    {% if block.settings.subtitle != blank %}
                      <div class="banner_subtitle flex custom_center subtitle">
                        {{ block.settings.subtitle }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
    {% assign variablename = section.id |  split: '_' | last %}
  
    let {{ variablename }} = {{ section.settings.carousel_arrows }};
  document.addEventListener("DOMContentLoaded", function() {
    const slider = new Splide('#{{section.id}}', {
        type: 'fade',
        perPage: 1,
        perMove: 1,
        arrows: {{variablename}},
        focus: 'left',
        classes: {
  		pagination: 'splide__pagination ibc_pagination',
  		page      : 'splide__pagination__page ibc_page',
  },
        breakpoints: {
            750: {
                perPage: 1,
  
            }
        }
    });
    slider.mount();
  });
</script>

{% schema %}
  {
    "name": "Image Banner Carousel",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "checkbox",
        "label": "Carousel Arrows",
        "id": "carousel_arrows",
        "default": false,
        "info": "check if carousel arrow buttons are required to be visible"
      }, {
        "type": "text",
        "label": "Heading",
        "id": "heading",
        "default": "Exclusive $ Collections ",
        "info": "add $ symbol to show Park Avenue logo"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "label": "Image (mobile)",
            "id": "image_small"
          },
          {
            "type": "image_picker",
            "label": "Image (desktop)",
            "id": "image_desktop"
          },
          {
            "type": "url",
            "label": "Image Link",
            "id": "image_link"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default": "CORPORATE SELECTIONS"
          }, {
            "type": "select",
            "label": "Title size",
            "id": "title_size",
            "options": [
              {
                "label": "Large",
                "value": "h2"
              }, {
                "label": "Medium",
                "value": "h3"
              }, {
                "label": "Small",
                "value": "h4"
              }
            ]
          }, {
            "type": "text",
            "label": "Subtitle",
            "id": "subtitle",
            "default": "Tailored to sartorial perfection from premium quality fabric, it assures a soft and soothing touch against the skin"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Banner Carousel"
      }
    ]
  }
{% endschema %}