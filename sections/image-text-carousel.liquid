<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .image_text_carousel {
      padding: 0px;
    }
    .image_text_carousel .image_box img {
      width: 100%;
      height: auto;
      aspect-ratio: 1.96;
    }
    .title {
      text-align: center;
    }
    @media screen and (min-width: 750px) {
  .pd_il{
  padding-inline: 0 1rem !important;
  }
    }
    .pd_r_0{
    padding-right:0;
  }
</style>

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width pd_r_0">
    <div class="image_text_carousel">
      {% if section.settings.heading != blank %}
        {% render 'text-with-logo', text: section.settings.heading, css_class: 'h1 mb-3' %}
      {% endif %}

      <div class="splide" id="{{ section.id }}">
        <div class="splide__arrows img_txt_carousel_arrows pd_il">
          <button class="splide__arrow splide__arrow--prev">
            {% render 'splide-left-arrow' %}
          </button>
          <button class="splide__arrow splide__arrow--next">
            {% render 'splide-right-arrow' %}
          </button>
        </div>
        <div class="splide__track">
          <div class="splide__list">
            {% for block in section.blocks %}
              {%- case block.type -%}
                {%- when 'image_text' -%}
                  <div class="splide__slide">
                    <a href="{{ block.settings.link }}">
                      <div class="image_box">
                        {% render 'picture',
                          class: '',
                          mobileSrc: block.settings.mobile_image,
                          desktopSrc: block.settings.desktop_image
                        %}
                      </div>
                    </a>
                    <p class="h3 title">{{ block.settings.title }}</p>
                  </div>
              {%- endcase -%}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    new Splide('#{{ section.id }}', {
      type: 'slide',
      rewind: true,
      rewindSpeed: 1000,
      start: 1,
      perPage: 2.2,
      classes: {
        pagination: 'splide__pagination ibc_pagination',
        page: 'splide__pagination__page ibc_page',
      },
      breakpoints: {
        749: {
          perPage: 1.2,
        },
      },
      gap: '20px',
      arrows: true,
    }).mount();
  });
</script>

{% schema %}
{
  "name": "Image text carousal",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Enter heading text"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "image text",
      "type": "image_text",
      "settings": [
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Select desktop image"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Select mobile image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Enter title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Choose url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image text carousal"
    }
  ]
}
{% endschema %}
