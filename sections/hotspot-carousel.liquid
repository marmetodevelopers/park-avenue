{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding">
  <div class="hotspot_carousel_main">
    {% if section.settings.heading != blank %}
      {% render "text-with-logo"
        , text: section.settings.heading
        , css_class: "h2 page-width mb-3" %}
    {% endif %}
    <my-splide
      class="splide"
      data-arrows="true"
      data-pagination="true"
      data-fixed-height="837px"
      id="{{section.id}}"
      aria-label="Splide Basic HTML Example">
      {% render 'splide-arrows' %}
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <a href="{{block.settings.image_link}}">
                <div class="ibc_image_container">
                  {% render 'picture'
                    , class: ''
                    , mobileSrc: block.settings.image_small
                    , desktopSrc: block.settings.image_desktop %}
                </div>
              </a>
              {% if block.settings.title != blank or block.settings.subtitle != blank %}
                <div class="banner_text pos_absolute pos_custom_bottom small-hide" style="height: 94%;">
                  <div class="banner_text_inner">
                    {% if block.settings.title != blank %}
                      <div class="banner_title flex custom_center pos_custom_top {{ block.settings.title_size }}">
                        <div class="banner_title_inner">
                          {{ block.settings.title }}
                        </div>
                      </div>
                    {% endif %}
                    {% if block.settings.subtitle != blank %}
                      <div class="banner_subtitle flex custom_center subtitle">
                        {{ block.settings.subtitle }}
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </my-splide>
  </div>
</div>

{% schema %}
  {
    "name": "Hotspot Carousel",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "checkbox",
        "label": "Carousel Arrows",
        "id": "carousel_arrows",
        "default": false,
        "info": "check if carousel arrow buttons are required to be visible"
      }, {
        "type": "text",
        "label": "Heading",
        "id": "heading",
        "default": "Exclusive $ Collections ",
        "info": "add $ symbol to show Park Avenue logo"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "label": "Image (mobile)",
            "id": "image_small"
          },
          {
            "type": "image_picker",
            "label": "Image (desktop)",
            "id": "image_desktop"
          },
          {
            "type": "url",
            "label": "Image Link",
            "id": "image_link"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default": "CORPORATE SELECTIONS"
          }, {
            "type": "select",
            "label": "Title size",
            "id": "title_size",
            "options": [
              {
                "label": "Large",
                "value": "h2"
              }, {
                "label": "Medium",
                "value": "h3"
              }, {
                "label": "Small",
                "value": "h4"
              }
            ]
          }, {
            "type": "text",
            "label": "Subtitle",
            "id": "subtitle",
            "default": "Tailored to sartorial perfection from premium quality fabric, it assures a soft and soothing touch against the skin"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hotspot Carousel"
      }
    ]
  }
{% endschema %}