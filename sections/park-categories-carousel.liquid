{{ 'home-custom.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="section-{{ section.id }}-padding">
  <div class="park_category_carousel_content-top">
    {% if section.settings.category_heading != blank %}
      {% render 'text-with-logo', text: section.settings.category_heading, css_class: 'h1 mb-3' %}
    {% endif %}
    <div class="park_category_carousel_content">
      {% for block in section.blocks %}
        {%- case block.type -%}
          {%- when 'image-text' -%}
            <div class="carousel_box">
              <a href="{{ block.settings.category_url }}">
                <div class="park_category_image_box">
                  {% render 'picture',
                    class: '',
                    mobileSrc: block.settings.mobile_image,
                    desktopSrc: block.settings.desktop_image
                  %}
                </div>
              </a>
              <p class="h3 category_text ">{{ block.settings.category_text }}</p>
              <div class="overlay"></div>
            </div>
        {%- endcase -%}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Park categories carousel",
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "label": "Enter heading",
      "id": "category_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image-text",
      "name": "Image-text",
      "settings": [
        {
          "type": "image_picker",
          "label": "Select desktop image",
          "id": "desktop_image"
        },
        {
          "type": "image_picker",
          "label": "Select mobile image",
          "id": "mobile_image"
        },
        {
          "type": "text",
          "label": "Enter text",
          "id": "category_text"
        },
        {
          "type": "url",
          "label": "Choose url",
          "id": "category_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Park categories carousel"
    }
  ]
}
{% endschema %}
